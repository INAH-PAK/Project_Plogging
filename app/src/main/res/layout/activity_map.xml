<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chip_group"
            >

            <com.google.android.material.chip.Chip
                android:id="@+id/chip01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분리수거장"
                android:textSize="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="화장실"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="주의"/>
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/mapview"
            android:layout_below="@id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="8dp"
            android:orientation="vertical"/>

<!--   https://jinsangjin.tistory.com/12    -->
<!--     Flaoting Button  고고 할 수 이써ㅓ서ㅓㅓㅓ-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/recycleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/extendedFab"
            android:layout_alignBottom="@id/mapview"
            android:elevation="6dp"
            android:visibility="visible"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cautionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="80dp"
            android:visibility="visible"

            app:fabSize="mini" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/extendedFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapview"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="마커추가"
            app:icon="@drawable/ic_baseline_add_24" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text=" 타이머 : "
            />
        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="50dp"
            />

        <Button
            android:id="@+id/btn02_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_200"/>
        <Button
            android:id="@+id/btn03_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계속"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_200"/>

</RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>