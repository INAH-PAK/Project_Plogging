<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FinalLoginActivity"
    android:padding="16dp"
    android:background="@color/sky">


        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            />


        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="로그인 없이 둘러보기  >   "
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_03"
            android:layout_marginTop="160dp"
            android:text="ID"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_02"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_03"
            android:layout_alignEnd="@id/tv_02"
            android:layout_marginTop="35dp"
            android:text="간편 로그인/회원가입"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_01"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="140dp"
            android:hint="Email" />

        <EditText
            android:id="@+id/et_02"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/et_01"
            android:layout_marginTop="178dp"
            android:hint="Password" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Sign_up_email"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/et_02"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/et_02"
            android:backgroundTint="@color/white"
            android:insetTop="0dp"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="11dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/kakao_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@id/tv_04"
            android:backgroundTint="#fae100"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:layout_marginStart="4dp"
            android:text="kakao"
            android:textColor="#3b1f06"
            android:textSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="240dp"
            android:backgroundTint="#0099FF"
            android:layout_toRightOf="@id/kakao_login"
            android:layout_marginStart="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="Google"
            android:textSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/email_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@id/google_login"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/red"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="Email"
            android:textSize="12dp" />




</RelativeLayout>