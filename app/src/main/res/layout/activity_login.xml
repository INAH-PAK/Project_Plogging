<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="activities.LoginActivity"
    android:padding="16dp"
    android:background="@color/sky">
<TextView
    android:id="@+id/tv01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=" 로그인으로 "
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textSize="20dp"/>
    <TextView
    android:id="@+id/tv02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" 다양한 공유 / 백업 기능을 무료로 누려보세요"
    android:textStyle="bold"
    android:layout_gravity="end"
    android:paddingRight="8dp"
    android:textColor="@color/white"
    android:textSize="20dp"/>


<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/civ_profile"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:src="@drawable/siba"-->
<!--        android:layout_gravity="center"/>-->


    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input email"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input password"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_signin_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="이메일로 로그인"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
    <Button
        android:id="@+id/btn_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일로 회원가입"
        android:backgroundTint="#79EB27"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 성공시 여기에 이메일 찍히기"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="간편한 소셜로그인 기능으로 빠르게 로그인 ->"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_kakao"
        android:src="@drawable/kakao_login_medium_wide"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/tv_kakao_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kakao account imformation"
        />
    <TextView
        android:id="@+id/tv_kakao_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kakao account 이메일"
        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구글 로그인~"
        android:id="@+id/btn_google"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tv_google_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="google account imformation"
       />

    <TextView
        android:id="@+id/tv07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 가입하고 싶으시다면 "
        android:textColor="@color/white"
        />


    <Button
        android:id="@+id/btn_unlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:backgroundTint="#FF0000"
        />


</LinearLayout>