<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="activities.LoginActivity"
    android:padding="16dp"
    android:background="@color/sky"
    android:gravity="center_horizontal|bottom"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plogging"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="70dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  ID"
        android:background="@drawable/bg_login"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:background="@drawable/bg_login"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_signin_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="이메일로 로그인"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_kakao"
        android:src="@drawable/kakao_login_medium_wide"
        android:adjustViewBounds="true"
        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A71FF"
        android:text="구글 로그인~" />

    <Button
        android:id="@+id/btn_signup_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="이메일로 회원가입"
        android:backgroundTint="#EB2727"
        android:layout_marginTop="80dp"
        />
    <Button
        android:id="@+id/btn_signin_noInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="둘러보기"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="40dp"
        />


</LinearLayout>