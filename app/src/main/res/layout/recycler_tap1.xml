<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<TextView
    android:id="@+id/tv01_tab1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="35dp"
    android:textStyle="bold"
    android:text=" D-3 "/>
<TextView
    android:id="@+id/tv02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/tv01_tab1"
    android:text=" 2022년 03월 26일 "/>

    <TextView
        android:id="@+id/tv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv02"
        android:paddingTop="5dp"
        android:layout_toRightOf="@id/tv01_tab1"
        android:text=" 오후 8시 :  " />
<TextView
    android:id="@+id/tv04"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/tv03"
    android:layout_alignBaseline="@id/tv03"
    android:text=" 길동이랑 도산공원"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>