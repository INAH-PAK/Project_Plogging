<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ball_view"
    android:layout_margin="4px"
    app:cardCornerRadius="8px">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ball_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="마커타입"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_ball_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마커설명"
            android:textSize="10sp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_ball_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_ball_name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
